# Auth.js Configuration
# Generate AUTH_SECRET with: npx auth secret
AUTH_SECRET=your-secret-here

# GitHub OAuth
# Create app at: https://github.com/settings/developers
# Callback URL: http://localhost:3000/api/auth/callback/github
AUTH_GITHUB_ID=your_github_client_id
AUTH_GITHUB_SECRET=your_github_client_secret

# Google OAuth
# Create app at: https://console.cloud.google.com/apis/credentials
# Callback URL: http://localhost:3000/api/auth/callback/google
AUTH_GOOGLE_ID=your_google_client_id
AUTH_GOOGLE_SECRET=your_google_client_secret

# Database (PostgreSQL example)
# For Prisma adapter
DATABASE_URL=postgresql://user:password@localhost:5432/authdb

# Optional: Resend (for magic links)
# Get API key at: https://resend.com
AUTH_RESEND_KEY=re_your_resend_api_key

# Optional: Base URL (required in production)
# NEXTAUTH_URL=https://yourdomain.com
